<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LoginTextStyle">
        <item name="android:textAlignment">textStart</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_marginStart">125dp</item>
        <item name="android:paddingLeft">28dp</item>
        <item name="android:inputType">text</item>
        <item name="android:textColorHint">#ffffff</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:backgroundTint">#ffffff</item>
    </style>

    <style name="LoginButtonStyle">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_marginStart">125dp</item>
        <item name="android:background">#ffffff</item>
        <item name="android:textSize">17sp</item>
    </style>



    <style name="SignupStyle">
        <item name="android:textAlignment">textStart</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_marginStart">125dp</item>
        <item name="android:background">#ffffff</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:inputType">text</item>
    </style>



    <style name="SignupButtonStyle">
    <item name="android:textAlignment">center</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_centerInParent">true</item>
    <item name="android:layout_marginBottom">15dp</item>
    <item name="android:layout_marginStart">125dp</item>
    <item name="android:background">#ffffff</item>
    <item name="android:textSize">17sp</item>
    </style>



    <style name="partyStyle">
        <item name="android:textAlignment">textStart</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_marginTop">35dp</item>
       <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:background">#ffffff</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="SignUpTextStyle">
        <item name="android:textAlignment">textStart</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_marginStart">125dp</item>
        <item name="android:inputType">text</item>
        <item name="android:textColorHint">#ffffff</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:backgroundTint">#ffffff</item>
    </style>

</resources>
